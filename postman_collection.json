{
  "info": {
    "name": "Interview Challenge",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Add Message",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "x-api-key",
            "value": "viceversa-secret-key",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"user\": \"mohsen@gmail.com\",\n    \"message\": \"Testing 1\"\n}",
          "options": { "raw": { "language": "json" } }
        },
        "url": {
          "raw": "http://localhost:3000/add-message",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["add-message"]
        }
      }
    },
    {
      "name": "Get Messages",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "x-api-key",
            "value": "viceversa-secret-key",
            "type": "text"
          }
        ],
        "url": {
          "raw": "http://localhost:3000/messages?page=1&limit=5",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["messages"],
          "query": [
            { "key": "page", "value": "1" },
            { "key": "limit", "value": "5" }
          ]
        }
      }
    }
  ]
}
